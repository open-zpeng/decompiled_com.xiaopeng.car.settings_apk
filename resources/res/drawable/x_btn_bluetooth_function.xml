<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <selector>
            <item android:state_enabled="true" android:state_pressed="true">
                <shape>
                    <corners android:radius="@dimen/x_btn_ghost_small_radius"/>
                    <solid android:color="@color/x_theme_primary_neutral_pressed"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <corners android:radius="@dimen/x_btn_ghost_small_radius"/>
                    <solid android:color="@color/x_theme_primary_neutral_disable"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <drawable app:rippleRadius="@dimen/x_btn_ghost_small_radius" app:rippleSupportScale="true" class="com.xiaopeng.xui.drawable.ripple.XRippleDrawable"/>
    </item>
</layer-list>
