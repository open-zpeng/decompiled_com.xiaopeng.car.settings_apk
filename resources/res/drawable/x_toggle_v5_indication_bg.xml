<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_checked="true">
                <shape>
                    <corners android:radius="18dp"/>
                    <stroke android:width="1dp" android:color="@color/x_color_line"/>
                    <solid android:color="@color/x_color_text_highlight"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="18dp"/>
                    <solid android:color="@color/x_color_bg_light"/>
                </shape>
            </item>
        </selector>
    </item>
    <item android:gravity="bottom|center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@color/x_toggle_indication_color"/>
            <size android:height="8dp" android:width="32dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
