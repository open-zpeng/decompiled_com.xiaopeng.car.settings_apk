<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:gravity="center" android:height="60dp" android:width="60dp">
                <shape android:shape="oval">
                    <stroke android:width="3dp" android:color="#00a94e"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="48dp" android:width="48dp">
                <shape android:shape="oval">
                    <solid android:color="#45ffffff"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="40dp" android:width="40dp">
                <shape android:shape="oval">
                    <solid android:color="#300c1e39"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="16dp" android:width="16dp">
                <shape android:shape="oval">
                    <solid android:color="#fff"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="center" android:height="24dp" android:width="24dp">
                <shape android:shape="oval">
                    <solid android:color="#00bb7d"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="12dp" android:width="12dp">
                <shape android:shape="oval">
                    <solid android:color="#fff"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="6dp" android:width="6dp">
                <shape android:shape="oval">
                    <solid android:color="#e7edf5"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
