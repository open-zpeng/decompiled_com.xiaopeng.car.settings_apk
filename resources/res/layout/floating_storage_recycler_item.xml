<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="164dp">
    <RelativeLayout android:layout_width="@dimen/floating_item_left_width" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <com.xiaopeng.xui.widget.XButton android:id="@+id/button1" android:text="@string/sd_push_off" android:layout_centerInParent="true" style="@style/XButton.Ghost.Small.Positive"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/floating_item_left_width" android:layout_centerVertical="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_title_04_size" android:textColor="@color/x_theme_text_01" android:ellipsize="middle" android:id="@+id/text1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="hello" android:singleLine="true" android:layout_weight="1"/>
            <com.xiaopeng.xui.widget.XProgressBar android:layout_gravity="bottom|right" android:id="@+id/progressBar" android:layout_width="136dp" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:max="100" android:progress="50" style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <com.xiaopeng.xui.widget.XTextView android:id="@+id/action1" android:layout_width="115dp" android:layout_marginLeft="5dp" android:layout_marginTop="8dp" android:text="视频" style="@style/XButton.Mix.Small.Video"/>
            <com.xiaopeng.xui.widget.XTextView android:id="@+id/action2" android:layout_width="115dp" android:layout_marginTop="8dp" android:text="音乐" android:layout_marginStart="10dp" style="@style/XButton.Mix.Small.Music"/>
            <com.xiaopeng.xui.widget.XTextView android:id="@+id/action3" android:layout_width="115dp" android:layout_marginTop="8dp" android:text="图片" android:layout_marginStart="10dp" style="@style/XButton.Mix.Small.Pic"/>
            <com.xiaopeng.xui.widget.XTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_03_size" android:textColor="@color/float_storage_info" android:ellipsize="end" android:layout_gravity="start" android:id="@+id/text2" android:layout_width="180dp" android:layout_height="wrap_content" android:text="868.20MB/1GB" android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <com.xiaopeng.xui.widget.XProgressBar android:id="@+id/progressBar2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="60dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <com.xiaopeng.xui.widget.XImageView android:id="@+id/line" android:background="@drawable/line" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="29dp" android:layout_marginRight="23dp"/>
</RelativeLayout>
