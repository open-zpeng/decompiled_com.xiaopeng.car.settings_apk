<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="@dimen/floating_item_height">
    <RelativeLayout android:layout_width="@dimen/floating_item_left_width" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <ImageView android:id="@+id/icon1" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/ic_floating_wifi_signal" android:layout_centerInParent="true"/>
        <com.xiaopeng.xui.widget.XLoading android:id="@+id/progressBar" android:visibility="invisible" android:layout_centerInParent="true" style="@style/XLoading.Small"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="@dimen/floating_item_left_width" android:layout_marginEnd="@dimen/floating_item_margin_end">
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_title_04_size" android:textColor="@color/x_theme_text_01" android:id="@+id/text1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="hello" android:singleLine="true" android:layout_weight="1"/>
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_03_size" android:textColor="@color/x_theme_text_03" android:id="@+id/text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="已连接" android:maxLines="1" android:layout_toRightOf="@+id/text1"/>
    </LinearLayout>
    <ImageView android:id="@+id/line" android:background="@drawable/line" android:layout_width="match_parent" android:layout_height="@dimen/floating_item_line_height" android:layout_marginStart="@dimen/floating_item_line_margin" android:layout_marginEnd="@dimen/floating_item_line_margin"/>
</RelativeLayout>
