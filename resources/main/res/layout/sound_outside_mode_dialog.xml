<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1200dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:maxWidth="1200dp"
    android:maxHeight="700dp"
    android:minWidth="1200dp"
    android:minHeight="700dp">

    <!--    真正决定dialog宽高的-->
    <com.xiaopeng.xui.widget.XFrameLayout
        android:layout_width="1200dp"
        android:layout_height="700dp"
        android:layout_gravity="center">

        <com.xiaopeng.xui.widget.XImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic_sound_outside_mode_splash"
            android:scaleType="centerCrop" />

        <com.xiaopeng.xui.widget.XListTwo
            android:id="@+id/sound_outside_mode"
            style="@style/XList.Two"
            android:layout_width="1033dp"
            android:layout_height="136dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="49dp"
            app:list_two_left="@layout/x_list_action_switch"
            app:list_two_left_right_touch_full="left"
            app:list_two_text="@string/sound_outside_mode_dialog_title"
            app:list_two_text_sub="@string/sound_outside_mode_dialog_content" />

        <com.xiaopeng.xui.widget.XImageButton
            android:id="@+id/close"
            style="@style/XButton.Icon.Large.Close"
            android:layout_margin="16dp"
            app:vuiLabel="@string/qs_panel_close" />
    </com.xiaopeng.xui.widget.XFrameLayout>


</com.xiaopeng.xui.widget.XFrameLayout>
