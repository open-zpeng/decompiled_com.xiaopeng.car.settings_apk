<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/floating_dialog_width_mid"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tile_layout"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xiaopeng.xui.widget.XTextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/qs_panel_title_layout_margin_left"
                    android:paddingTop="@dimen/qs_panel_title_layout_margin_top"
                    android:paddingBottom="@dimen/qs_panel_title_layout_margin_bottom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_centerVertical="true"
                    android:text="@string/account_unlogin"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:textColor="@color/qs_panel_account_name"
                    android:textSize="@dimen/qs_panel_title_size" />

                <com.xiaopeng.xui.widget.XTextView
                    android:id="@+id/qs_panel_enter_account"
                    android:textColor="@color/qs_panel_textcolor"
                    android:textSize="@dimen/qs_panel_tips_size"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/qs_panel_title_drawable_padding"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="@dimen/qs_panel_title_layout_margin_top"
                    android:paddingBottom="@dimen/qs_panel_title_layout_margin_bottom"
                    android:paddingEnd="@dimen/qs_panel_title_layout_margin_right"
                    android:drawableEnd="@drawable/ic_xsmall_qc_arrowmore"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/account_name"
                    app:layout_constraintBottom_toBottomOf="@+id/account_name"
                    android:text="@string/qs_panel_click_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

      <!--      <View
                android:id="@+id/line"
                android:layout_below="@id/tile_layout"
                android:background="@color/qs_panel_line_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
-->
            <LinearLayout
                android:layout_below="@id/tile_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/qa_panel_recycle_view_margin"
                    android:layout_marginRight="@dimen/qa_panel_recycle_view_margin"
                    tools:itemCount="20"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:spanCount="4">

                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="@dimen/qs_panel_edit_width_edge"
                    android:layout_height="@dimen/qs_panel_edit_height_edge"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/edit_panel_bottom_margin">

                    <com.xiaopeng.xui.widget.XTextView
                        android:id="@+id/qs_panel_edit"
                        android:layout_width="@dimen/qs_panel_edit_width"
                        android:layout_height="@dimen/qs_panel_edit_height"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/qs_panel_edit_bg"
                        android:scaleType="center"
                        android:textColor="@color/qs_panel_toggle_enable_text_color"
                        android:textSize="@dimen/x_font_body_03_size"
                        android:text="@string/qs_panel_edit"
                        android:gravity="center"/>

                    <com.xiaopeng.xui.widget.XTextView
                        android:id="@+id/qs_panel_new"
                        android:layout_width="@dimen/qs_panel_new_icon_width"
                        android:layout_height="@dimen/qs_panel_new_icon_width"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/qs_panel_new_drawable"
                        android:visibility="gone"/>
                   <!-- <com.xiaopeng.xui.widget.XTextView
                        android:id="@+id/qs_panel_new"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/qs_panel_new_bg"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="@string/qs_panel_new"
                        android:textColor="#3B99FF"
                        android:textSize="@dimen/x_font_body_03_size"/>-->

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
