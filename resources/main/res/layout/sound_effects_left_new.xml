<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XLinearLayout
    android:id="@+id/sound_effect_left_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/sound_effect_left_top_margin"
    android:layout_marginLeft="124dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.xiaopeng.xui.widget.XTextView
            android:id="@+id/sound_effect_mode_title"
            android:text="@string/sound_subtitle_effects_mode"
            android:layout_marginLeft="@dimen/sound_effect_left_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/x_theme_text_03"
            android:textSize="28sp"/>

        <com.xiaopeng.xui.widget.XRelativeLayout
            android:id="@+id/sound_effect_mode_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ViewStub
                    android:id="@+id/sound_effect_recent_mode_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/sound_effect_recent_mode"
                    android:visibility="gone"/>

                <ViewStub
                    android:id="@+id/sound_effect_recent_mode_layout_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/sound_effect_recent_mode_high"
                    android:visibility="gone"/>

                <ViewStub
                    android:id="@+id/sound_effect_mode_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/sound_effect_mode"
                    android:visibility="gone"/>

                <ViewStub
                    android:id="@+id/sound_effect_mode_layout_hifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/sound_effect_mode_hifi_xp"
                    android:visibility="gone"/>

                <ViewStub
                    android:id="@+id/sound_effect_mode_layout_dyna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/sound_effect_mode_dyna"
                    android:visibility="gone"/>

        </com.xiaopeng.xui.widget.XRelativeLayout>

        <ViewStub
            android:id="@+id/sound_effect_scene_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/sound_effect_scene"/>

        <ViewStub
            android:id="@+id/sound_effect_equalizer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/sound_effect_equalizer_entrance"/>

        <ViewStub
            android:id="@+id/sound_effect_space_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/sound_effect_space_page"/>

</com.xiaopeng.xui.widget.XLinearLayout>
