<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xiaopeng.car.settingslibrary.ui.fragment.floating.MediaTestFragment">

    <com.xiaopeng.car.settingslibrary.ui.widget.MediaControlView
        android:id="@+id/media_control"
        style="@style/MusicPanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:id="@+id/slider_layout"
        android:layout_width="112dp"
        android:layout_height="396dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/media_control"
        app:layout_constraintLeft_toLeftOf="parent"
        app:sliderLayout_slide_from="from_bottom">

        <View
            android:id="@+id/air_fan_indicator1"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_xsmall_airfan_big" />

        <View
            android:id="@+id/air_fan_indicator2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/air_fan_indicator1"
            app:layout_constraintBottom_toTopOf="@+id/air_fan_indicator3"
            android:background="@drawable/qc_air_fan_level_indicator" />

        <View
            android:id="@+id/air_fan_indicator3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/air_fan_indicator2"
            app:layout_constraintBottom_toTopOf="@+id/air_fan_indicator4"/>

        <View
            android:id="@+id/air_fan_indicator4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/air_fan_indicator3"
            app:layout_constraintBottom_toTopOf="@+id/air_fan_indicator5"/>

        <View
            android:id="@+id/air_fan_indicator5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/air_fan_indicator4"
            app:layout_constraintBottom_toTopOf="@+id/air_fan_indicator6"/>

        <View
            android:id="@+id/air_fan_indicator6"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/air_fan_indicator5"
            app:layout_constraintBottom_toTopOf="@+id/air_fan_indicator7"/>

        <View
            android:id="@+id/air_fan_indicator7"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_xsmall_airfan_mini"/>

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>
    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:layout_width="396dp"
        android:layout_height="112dp"
        app:layout_constraintTop_toBottomOf="@id/slider_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp">

        <View
            android:id="@+id/light_indicator1"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_xsmall_qc_light" />

        <View
            android:id="@+id/light_indicator2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator1"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator3"
            android:background="@drawable/qc_light_level_indicator" />

        <View
            android:id="@+id/light_indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator2"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator4"/>

        <View
            android:id="@+id/light_indicator4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator3"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator5"/>

        <View
            android:id="@+id/light_indicator5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator4"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator6"/>

        <View
            android:id="@+id/light_indicator6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator5"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator7"/>

        <View
            android:id="@+id/light_indicator7"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_xsmall_qc_lightbig"/>

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
