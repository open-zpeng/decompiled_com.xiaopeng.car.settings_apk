<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_mode_dynamic"
        style="@style/SoundEffect_Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_marginTop="@dimen/sound_effect_left_top_margin_content"
        android:text="@string/sound_dynamic_text" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_mode_human"
        style="@style/SoundEffect_Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_alignTop="@id/sound_effect_mode_dynamic"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/sound_effect_mode_dynamic"
        android:text="@string/sound_people_text" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_mode_real"
        style="@style/SoundEffect_Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_below="@id/sound_effect_mode_dynamic"
        android:layout_alignLeft="@id/sound_effect_mode_dynamic"
        android:layout_marginTop="27dp"
        android:text="@string/sound_real_text" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_mode_soft"
        style="@style/SoundEffect_Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_alignTop="@id/sound_effect_mode_real"
        android:layout_alignLeft="@id/sound_effect_mode_human"
        android:layout_toRightOf="@id/sound_effect_mode_real"
        android:text="@string/sound_soft_text" />
</com.xiaopeng.xui.widget.XRelativeLayout>
