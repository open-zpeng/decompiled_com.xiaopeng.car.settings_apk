<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/x_dialog_large_width"
    android:orientation="vertical">

    <com.xiaopeng.xui.widget.XGroupHeader
        style="@style/XGroupHeader"
        android:layout_width="match_parent"
        app:group_header_text="@string/about_subtitle_device_info" />

    <com.xiaopeng.xui.widget.XLinearLayout
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/x_list_item_selector"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginTop="84dp"
            android:layout_marginBottom="84dp"
            android:layout_width="500dp"
            android:layout_height="280dp"
            android:visibility="gone"
            android:src="@drawable/about_device_info_icon"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:id="@+id/about_system_info_container"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </com.xiaopeng.xui.widget.XLinearLayout>


</LinearLayout>
