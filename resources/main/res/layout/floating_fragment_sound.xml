<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xiaopeng.xui.widget.XTextView
        style="@style/FloatingSoundText"
        android:text="@string/sound_volume_media" />

    <com.xiaopeng.xui.widget.slider.XSlider
        android:id="@+id/seekBarMedia"
        style="@style/FloatingSoundSeekBar"
        android:progress="50" />

    <com.xiaopeng.xui.widget.XImageView style="@style/FloatingLine" />

    <!--<TextView
        style="@style/FloatingSoundText"
        android:text="@string/sound_volume_ring" />

    <SeekBar
        android:id="@+id/seekBarCall"
        style="@style/FloatingSoundSeekBar"
        android:progress="50" />

    <ImageView style="@style/FloatingLine" />-->

    <com.xiaopeng.xui.widget.XTextView
        style="@style/FloatingSoundText"
        android:text="@string/sound_volume_speech" />

    <com.xiaopeng.xui.widget.slider.XSlider
        android:id="@+id/seekBarSpeech"
        style="@style/FloatingSoundSeekBar"
        android:progress="50" />

    <com.xiaopeng.xui.widget.XImageView style="@style/FloatingLine" />

    <com.xiaopeng.xui.widget.XTextView
        style="@style/FloatingSoundText"
        android:text="@string/sound_volume_tts" />

    <com.xiaopeng.xui.widget.slider.XSlider
        android:id="@+id/seekBarTts"
        style="@style/FloatingSoundSeekBar"
        android:progress="50" />

    <com.xiaopeng.xui.widget.XImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/line"/>

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/bg_floating_button"
        android:gravity="center"
        android:text="@string/floating_sound"
        android:textColor="@color/x_blue_color"
        android:textSize="@dimen/x_font_title_03_size" />
</LinearLayout>
