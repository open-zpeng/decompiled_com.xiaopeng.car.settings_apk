<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="64dp">

    <com.xiaopeng.xui.widget.XTitleBarLight
        android:id="@+id/x_title_bar"
        style="@style/XTitleBar"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title_main_action="back"
        app:title_text_type="sparse"
        tools:title_text="app名称" />

    <com.xiaopeng.xui.widget.XImageButton
        android:id="@+id/ib_close"
        style="@style/XButton.V5.Action.Large"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/x_ic_small_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/XFont.Title2"
        tools:fontFamily="@null"
        tools:text="app名称"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/x_color_text_1"/>

    <com.xiaopeng.xui.view.XView
        android:id="@+id/v_bg_app_data"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="56dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_apps_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x_font_title_02_size"
        tools:fontFamily="@null"
        android:layout_marginLeft="16dp"
        android:text="@string/storage_app_data"
        android:textColor="@color/x_color_text_1"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg_app_data"
        app:layout_constraintLeft_toLeftOf="@+id/v_bg_app_data"
        app:layout_constraintTop_toTopOf="@+id/v_bg_app_data" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_storage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/XFont.Body1"
        tools:fontFamily="@null"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:textColor="@color/x_color_text_2"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg_app_data"
        app:layout_constraintRight_toRightOf="@+id/v_bg_app_data"
        app:layout_constraintTop_toTopOf="@+id/v_bg_app_data"
        tools:text="111MB" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/btn_clean"
        style="@style/XButton.V5.Real.Mid.Negative"
        android:layout_width="0dp"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:text="@string/storage_clean_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_bg_app_data" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/XFont.Body4"
        tools:fontFamily="@null"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="84dp"
        android:gravity="center"
        android:textColor="@color/x_color_text_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clean"
        tools:text="xxxxxxxxxxxxxxxxxxx，xxxxxxxxxxxxx，xxxxxxxxxxx" />

</com.xiaopeng.xui.widget.XConstraintLayout>
