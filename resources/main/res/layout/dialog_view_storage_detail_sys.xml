<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/x_theme_bg_dialog_color">

    <com.xiaopeng.xui.widget.XTitleBarLight
        android:id="@+id/x_title_bar"
        style="@style/XTitleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title_text_type="sparse"
        app:title_main_action="back"
        tools:title_text="app名称" />

    <com.xiaopeng.xui.view.XView
        android:id="@+id/v_bg_app_data"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/storage_dialog_padding"
        android:layout_marginTop="78dp"
        android:layout_marginRight="@dimen/storage_dialog_padding"
        android:layout_marginBottom="16dp"
        android:background="@drawable/x_list_item_selector"
        app:layout_constraintTop_toBottomOf="@+id/x_title_bar" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_apps_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="@string/storage_app_data"
        android:textColor="@color/x_theme_text_01"
        android:textSize="@dimen/x_font_body_01_size"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg_app_data"
        app:layout_constraintLeft_toLeftOf="@+id/v_bg_app_data"
        app:layout_constraintTop_toTopOf="@+id/v_bg_app_data" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_storage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:maxLines="1"
        tools:text="111MB"
        android:textColor="@color/x_theme_text_01"
        android:textSize="@dimen/x_font_body_01_size"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg_app_data"
        app:layout_constraintRight_toRightOf="@+id/v_bg_app_data"
        app:layout_constraintTop_toTopOf="@+id/v_bg_app_data" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/btn_clean"
        android:layout_width="584dp"
        android:layout_height="76dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/btn_storage_clean_selector"
        android:text="@string/storage_clean_btn"
        android:textColor="@color/x_btn_real_color_selector"
        android:textSize="@dimen/x_font_body_01_size"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_bg_app_data" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="84dp"
        android:gravity="center"
        tools:text="xxxxxxxxxxxxxxxxxxx，xxxxxxxxxxxxx，xxxxxxxxxxx"
        android:textColor="@color/x_theme_text_03"
        android:textSize="@dimen/x_font_body_04_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clean" />


    <!-- id占位 实际使用在dialog_view_storage_detail_v5中 -->
    <com.xiaopeng.xui.widget.XImageButton
        android:id="@+id/ib_close"
        style="@style/XButton.V5.Action.Large"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:src="@drawable/x_ic_small_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/XFont.Title2"
        tools:fontFamily="@null"
        android:visibility="gone"
        tools:text="app名称"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/x_color_text_1"/>

</com.xiaopeng.xui.widget.XConstraintLayout>
