<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/floating_dialog_width_small"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:id="@+id/qs_panel_brightness"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height"
        android:layout_marginTop="@dimen/qs_panel_header_item_margintop"
        android:layout_marginLeft="@dimen/qs_panel_psg_item_edge"
        android:layout_marginRight="@dimen/qs_panel_psg_item_edge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qs_panel_driver_mode">

        <View
            android:id="@+id/light_indicator1"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_xsmall_qc_light" />

        <View
            android:id="@+id/light_indicator2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator1"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator3"
            android:background="@drawable/qc_light_level_indicator" />

        <View
            android:id="@+id/light_indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator2"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator4"/>

        <View
            android:id="@+id/light_indicator4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator3"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator5"/>

        <View
            android:id="@+id/light_indicator5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator4"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator6"/>

        <View
            android:id="@+id/light_indicator6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator5"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator7"/>

        <View
            android:id="@+id/light_indicator7"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_xsmall_qc_lightbig"/>

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>

    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:id="@+id/qs_panel_temperature"
        android:layout_marginLeft="@dimen/qs_panel_psg_item_edge"
        android:layout_marginRight="@dimen/qs_panel_psg_item_edge"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height"
        android:layout_marginTop="@dimen/qs_panel_toggle_item_space">

        <com.xiaopeng.xui.widget.XTextView
            android:id="@+id/temperature_fan_indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="27.5Â°"
            android:textColor="@color/qc_text_color"
            android:textSize="@dimen/qc_temperature_text_size"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>

    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:id="@+id/qs_panel_wind"
        android:layout_marginLeft="@dimen/qs_panel_psg_item_edge"
        android:layout_marginRight="@dimen/qs_panel_psg_item_edge"
        android:layout_marginTop="@dimen/qs_panel_header_item_space"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height">

        <View
            android:id="@+id/air_fan_indicator1"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_xsmall_airfan_mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/air_fan_indicator2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/air_fan_indicator1"
            app:layout_constraintStart_toStartOf="@id/air_fan_indicator3"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/air_fan_indicator3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/air_fan_indicator2"
            app:layout_constraintStart_toStartOf="@id/air_fan_indicator4"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/air_fan_indicator4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/air_fan_indicator3"
            app:layout_constraintStart_toStartOf="@id/air_fan_indicator5"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.xiaopeng.xui.widget.XTextView
            android:id="@+id/qs_panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qs_panel_close"
            android:textColor="@color/x_theme_text_04"
            android:textSize="@dimen/x_font_body_01_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.xiaopeng.xui.widget.XImageView
            android:id="@+id/qs_panel_wind_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_large_auto_air"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/air_fan_indicator5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/air_fan_indicator4"
            app:layout_constraintStart_toStartOf="@+id/air_fan_indicator6"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/air_fan_indicator6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/qc_air_fan_level_indicator"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/air_fan_indicator5"
            app:layout_constraintStart_toStartOf="@+id/air_fan_indicator7"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/air_fan_indicator7"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_xsmall_airfan_big"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>

    <com.xiaopeng.car.settingslibrary.ui.widget.MediaControlView
        android:id="@+id/media_control"
        android:layout_marginLeft="@dimen/qs_panel_psg_item_edge"
        android:layout_marginRight="@dimen/qs_panel_psg_item_edge"
        style="@style/MusicPanel"
        android:layout_marginTop="@dimen/qs_panel_toggle_item_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/qs_panel_header_item_margintop" />
</com.xiaopeng.xui.widget.XLinearLayout>

