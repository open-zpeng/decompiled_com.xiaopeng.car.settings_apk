<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/padding_normal"
    android:layout_marginBottom="@dimen/padding_normal"
    android:gravity="center_vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <TextView
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/traffic_header_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#9EA1A5"
        android:textSize="@dimen/x_font_body_02_size"
        android:text="@string/traffic_uninstall_app_title" />

    <TextView
        android:id="@+id/traffic_header_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:maxLines="1"
        android:textColor="@color/x_gray_color"
        android:textSize="@dimen/x_font_body_02_size"
        tools:text="21.4MB" />
</RelativeLayout>



