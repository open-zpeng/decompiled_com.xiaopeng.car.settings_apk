<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/floating_item_height">

    <RelativeLayout
        android:layout_width="@dimen/floating_item_left_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_floating_wifi_signal" />
        <com.xiaopeng.xui.widget.XLoading
            android:id="@+id/progressBar"
            style="@style/XLoading.Small"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/floating_item_left_width"
        android:layout_marginEnd="@dimen/floating_item_margin_end"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.xiaopeng.xui.widget.XTextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="hello"
            android:textColor="@color/x_theme_text_01"
            android:textSize="@dimen/x_font_title_04_size" />

        <com.xiaopeng.xui.widget.XTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/text1"
            android:maxLines="1"
            android:text="已连接"
            android:textColor="@color/x_theme_text_03"
            android:textSize="@dimen/x_font_body_03_size" />
    </LinearLayout>

    <!--<ImageView
        android:id="@+id/icon2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_floating_password" />-->

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/floating_item_line_height"
        android:layout_marginStart="@dimen/floating_item_line_margin"
        android:layout_marginEnd="@dimen/floating_item_line_margin"
        android:background="@drawable/line" />
</RelativeLayout>
