<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/qs_panel_padding_recyclerview">
    <com.xiaopeng.car.settingslibrary.ui.widget.XSelectorAnimButton
        android:id="@+id/qs_panel_driver_mode"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height"
        android:textSize="@dimen/x_font_body_01_size"
        android:textColor="@drawable/selectorbutton_selector"
        app:itemText="@array/driver_mode_tiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qs_panel_trunk"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/qs_panel_selector_space"/>

    <com.xiaopeng.car.settingslibrary.ui.widget.XTileButton
        android:id="@+id/qs_panel_trunk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tile_background="@drawable/xtoggle_layout_drawable"
        app:layout_constraintTop_toTopOf="@id/qs_panel_driver_mode"
        app:layout_constraintStart_toEndOf="@id/qs_panel_driver_mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/qs_panel_toggle_item_space"
        android:layout_marginEnd="@dimen/qs_panel_selector_space"
        app:tile_text="@string/qs_panel_trunk"
        app:tile_textColor="@color/qs_panel_toggle_disable_text_color"/>

    <com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout
        android:id="@+id/qs_panel_brightness"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height"
        android:layout_marginTop="@dimen/qs_panel_header_item_space"
        android:layout_marginStart="@dimen/qs_panel_selector_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qs_panel_driver_mode"
        app:layout_constraintEnd_toStartOf="@id/qs_panel_rear_mirror">

        <View
            android:id="@+id/light_indicator1"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/volume_slider_svg_margin"
            android:background="@drawable/ic_xsmall_qc_light" />

        <View
            android:id="@+id/light_indicator2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator1"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator3"
            android:background="@drawable/qc_light_level_indicator" />

        <View
            android:id="@+id/light_indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator2"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator4"/>

        <View
            android:id="@+id/light_indicator4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator3"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator5"/>

        <View
            android:id="@+id/light_indicator5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator4"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator6"/>

        <View
            android:id="@+id/light_indicator6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/qc_light_level_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/light_indicator5"
            app:layout_constraintEnd_toStartOf="@+id/light_indicator7"/>

        <View
            android:id="@+id/light_indicator7"
            android:layout_width="@dimen/x_ic_svg_small_size"
            android:layout_height="@dimen/x_ic_svg_small_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/volume_slider_svg_margin"
            android:background="@drawable/ic_xsmall_qc_lightbig"/>

    </com.xiaopeng.car.settingslibrary.ui.widget.QcSliderLayout>

    <com.xiaopeng.car.settingslibrary.ui.widget.XTileButton
        android:id="@+id/qs_panel_rear_mirror"
        android:layout_width="@dimen/qs_panel_toggle_width"
        android:layout_height="@dimen/qs_panel_toggle_height"
        app:tile_background="@drawable/xtoggle_layout_drawable"
        android:layout_marginStart="@dimen/qs_panel_toggle_item_space"
        android:layout_marginEnd="@dimen/qs_panel_selector_space"
        app:layout_constraintTop_toTopOf="@id/qs_panel_brightness"
        app:layout_constraintStart_toEndOf="@id/qs_panel_brightness"
        app:layout_constraintEnd_toEndOf="parent"
        app:tile_text="@string/qs_panel_rearview_mirror"
        app:tile_textColor="@color/qs_panel_toggle_enable_text_color"/>

    <com.xiaopeng.car.settingslibrary.ui.widget.XSelectorAnimButton
        android:id="@+id/qs_panel_seat_memory"
        android:layout_width="@dimen/qs_panel_selector_width"
        android:layout_height="@dimen/qs_panel_selector_height"
        android:gravity="center_vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:textSize="@dimen/x_font_title_03_size"
        android:layout_marginStart="@dimen/qs_panel_selector_space"
        android:layout_marginTop="@dimen/qs_panel_header_item_space"
        android:textColor="@drawable/selectorbutton_selector"
        app:itemIcon="@array/seat_memory_mode_tiles"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qs_panel_capacity_recovery"
        app:layout_constraintTop_toBottomOf="@id/qs_panel_brightness"
        />

    <com.xiaopeng.car.settingslibrary.ui.widget.XTileButton
        android:id="@+id/qs_panel_capacity_recovery"
        android:layout_width="@dimen/qs_panel_toggle_width"
        android:layout_height="@dimen/qs_panel_toggle_height"
        app:tile_background="@drawable/qs_panel_item_multisate_selector"
        app:layout_constraintTop_toTopOf="@id/qs_panel_seat_memory"
        app:layout_constraintStart_toEndOf="@id/qs_panel_seat_memory"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/qs_panel_toggle_item_space"
        android:layout_marginEnd="@dimen/qs_panel_selector_space"
        android:orientation="vertical"
        android:visibility="gone"
        app:tile_text="@string/qs_panel_energy_recovery"
        app:tile_textColor="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
