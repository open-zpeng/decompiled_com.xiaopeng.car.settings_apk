<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true">
        <com.xiaopeng.xui.widget.XImageView
            android:id="@+id/img_for_sell"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:padding="18dp"
            android:background="@drawable/layer_bg_sell"/>
        <com.xiaopeng.xui.widget.XImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="#ff00"
            android:visibility="invisible"
            />
    </RelativeLayout>


    <com.xiaopeng.xui.widget.XTextView
        android:text="@string/cb_status_search_by_qrcode"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/dialog_common_text_med_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>

