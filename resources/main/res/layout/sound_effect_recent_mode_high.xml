<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_recent_mode_dynamic"
        style="@style/SoundEffect_Button"
        android:layout_width="@dimen/sound_effect_btn_width"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_marginTop="24dp"
        android:text="@string/sound_dynamic_text" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_recent_mode_original"
        style="@style/SoundEffect_Button"
        android:layout_width="@dimen/sound_effect_btn_width"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_alignTop="@id/sound_effect_recent_mode_dynamic"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@id/sound_effect_recent_mode_dynamic"
        android:text="@string/sound_original_text" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/sound_effect_recent_mode_cinema"
        style="@style/SoundEffect_Button"
        android:layout_width="@dimen/sound_effect_btn_width"
        android:layout_height="@dimen/sound_effect_btn_height"
        android:layout_below="@id/sound_effect_recent_mode_dynamic"
        android:layout_alignLeft="@id/sound_effect_recent_mode_dynamic"
        android:layout_marginTop="32dp"
        android:text="@string/sound_scenes_theater" />

</com.xiaopeng.xui.widget.XRelativeLayout>
