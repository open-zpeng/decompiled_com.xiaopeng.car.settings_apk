<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/capsule_cinema_projector_bt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="47dp"
        android:text="@string/cinema_projector_bt_title"
        style="@style/TitleTextStyle.Night"
        app:vuiMode="DISABLED" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/capsule_cinema_projector_bt_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="107dp"
        style="@style/TextStyleSummary.Night"
        android:text="@string/cinema_projector_bt_summary"
        app:vuiMode="DISABLED" />

    <com.xiaopeng.xui.widget.XImageView
        android:id="@+id/capsule_cinema_projector_bt_bg_img"
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/capsule_cinema_projector_bg_img"
        app:vuiMode="DISABLED"/>

    <com.xiaopeng.xui.widget.XLoading
        android:id="@+id/capsule_cinema_projector_connect_loading"
        style="@style/XLoading.XLarge"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="418dp"
        android:visibility="gone" />

    <com.xiaopeng.xui.widget.XImageView
        android:id="@+id/capsule_cinema_projector_bt_connect_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="400dp"
        android:src="@drawable/capsule_cinema_projector_bt_connect_success"
        app:vuiMode="DISABLED"/>

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/capsule_cinema_projector_connect_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="656dp"
        android:text="@string/cinema_projector_bt_title"
        android:textSize="30sp"
        style="@style/TitleTextStyle.Night"
        app:vuiMode="DISABLED" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/capsule_cinema_projector_open_bt"
        style="@style/XButton.Real.Mid.Positive.Night"
        android:layout_width="328dp"
        android:layout_height="66dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="822dp"
        android:drawableStart="@drawable/capsule_cinema_connect_bt_icon"
        android:drawablePadding="32dp"
        android:paddingStart="24dp"
        android:gravity="start|center_vertical"
        android:letterSpacing="0.1"
        android:text="@string/cinema_use_guide_connect_project_manually"
        android:textSize="@dimen/x_font_title_03_size"
        android:visibility="visible"/>

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/capsule_cinema_projector_bt_tips_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="556dp"
        style="@style/TitleTextStyle.Night"
        android:text="@string/cinema_projector_bt_tips_name"
        android:textSize="26sp"
        app:vuiMode="DISABLED" />

    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/capsule_cinema_projector_bt_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="510dp"
        style="@style/TextStyleSummary.Night"
        android:text="@string/cinema_projector_bt_tips"
        android:textSize="20sp"
        app:vuiMode="DISABLED" />

    <com.xiaopeng.xui.widget.XImageView
        android:layout_width="980dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="180dp"
        android:src="@drawable/capsule_cinema_projector_bt_tips_img"
        app:vuiMode="DISABLED"/>

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/capsule_cinema_projector_bt_pre_btn"
        style="@style/XButton.Ghost.Large.Positive.Night"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="44dp"
        android:text="@string/cinema_use_guide_pre_btn"
        android:textSize="@dimen/x_font_title_03_size" />

    <com.xiaopeng.xui.widget.XButton
        android:id="@+id/capsule_cinema_projector_bt_complete_btn"
        style="@style/XButton.Ghost.Large.Positive.Night"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="44dp"
        android:text="@string/cinema_use_guide_complete_btn"
        android:textSize="@dimen/x_font_title_03_size" />

</com.xiaopeng.xui.widget.XFrameLayout>
