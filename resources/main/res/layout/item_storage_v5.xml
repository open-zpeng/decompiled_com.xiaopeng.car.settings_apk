<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cl_cache_item"
android:foreground="@color/x_tint_press"
android:layout_height="136dp">

<!--<com.xiaopeng.xui.view.XView-->
<!--    android:id="@+id/v_bg"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"-->
<!--    android:background="@drawable/x_list_item_selector"/>-->

    <com.xiaopeng.xui.widget.XImageView
        android:id="@+id/xiv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="80dp"/>
    
<com.xiaopeng.xui.widget.XTextView
    android:id="@+id/tv_apps_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/XFont.Body1"
    tools:fontFamily="@null"
    android:layout_marginLeft="40dp"
    android:text="@string/storage_cache"
    android:textColor="@color/x_color_text_1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/xiv_icon"/>

<com.xiaopeng.xui.widget.XTextView
    android:id="@+id/tv_storage_size"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/XFont.Body2"
    tools:fontFamily="@null"
    tools:text="111MB"
    android:maxLines="1"
    android:gravity="center"
    android:drawableRight="@drawable/ic_arrow"
    android:drawablePadding="10dp"
    android:textColor="@color/x_color_text_2"
    android:layout_marginRight="64dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

</com.xiaopeng.xui.widget.XConstraintLayout>
