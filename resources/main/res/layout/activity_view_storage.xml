<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp">

    <com.xiaopeng.xui.widget.XTitleBarLight
        android:id="@+id/x_title_bar"
        style="@style/XTitleBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title_main_action="close"
        app:title_text="@string/storage_zone_title"
        app:title_text_type="sparse" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="84dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x_title_bar">

        <com.xiaopeng.xui.widget.XConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="true"
            android:paddingRight="32dp"
            android:paddingBottom="84dp">

            <com.xiaopeng.xui.widget.XConstraintLayout
                android:id="@+id/xcl_top_card"
                style="@style/XLinearLayoutCard"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.xiaopeng.xui.widget.XTextView
                    android:id="@+id/tv_title_storage"
                    style="@style/XFont.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="48dp"
                    android:text="@string/storage_size_used"
                    android:visibility="gone"
                    android:textColor="@color/x_color_text_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:fontFamily="@null" />

                <com.xiaopeng.xui.widget.XTextView
                    android:id="@+id/tv_used_storage_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="64dp"
                    android:text="@string/about_clean_space_used"
                    android:textColor="@color/color_text_storage_used"
                    android:textSize="26sp"
                    android:visibility="gone"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="64dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <com.xiaopeng.xui.widget.XProgressBar
                    android:id="@+id/view_free_space"
                    style="@style/XProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginBottom="57dp"
                    android:max="100"
                    android:min="0"
                    android:progress="50"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_used_storage_percent"
                    tools:visibility="visible" />

                <com.xiaopeng.xui.widget.XLoading
                    android:id="@+id/l_storage_usage_loading_view"
                    android:layout_width="0dp"
                    android:layout_height="136dp"
                    android:layout_gravity="center"
                    android:background="@drawable/x_list_item_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loading_type="small"
                    tools:visibility="gone" />

            </com.xiaopeng.xui.widget.XConstraintLayout>

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/tv_title_apps_space"
                style="@style/XFont.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@null"
                android:text="@string/storage_size_apps2"
                android:textColor="@color/x_color_text_3"
                android:textSize="@dimen/x_font_title_04_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/xcl_top_card" />

            <com.xiaopeng.xui.widget.XLinearLayout
                android:id="@+id/ll_storage_list"
                style="@style/XLinearLayoutCard"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_apps_space">

                <com.xiaopeng.xui.widget.XFrameLayout
                    android:id="@+id/fl_storage_list"
                    style="@style/XLinearLayoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="true"
                    android:outlineProvider="background">

                    <com.xiaopeng.xui.widget.XRecyclerView
                        android:id="@+id/rv_storage_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_storage_v5"
                        tools:visibility="visible" />

                    <com.xiaopeng.xui.widget.XLoading
                        android:id="@+id/l_storage_list_loading_view"
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:layout_gravity="center"
                        android:background="@drawable/x_list_item_selector"
                        app:loading_type="small"
                        tools:visibility="gone" />
                </com.xiaopeng.xui.widget.XFrameLayout>

            </com.xiaopeng.xui.widget.XLinearLayout>

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/tv_title_cache"
                style="@style/XFont.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="80dp"
                android:text="@string/storage_cache"
                android:textColor="@color/x_color_text_3"
                android:textSize="@dimen/x_font_title_04_size"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_storage_list"
                tools:fontFamily="@null" />

            <com.xiaopeng.xui.widget.XLinearLayout
                style="@style/XLinearLayoutCard"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_cache"
                app:layout_goneMarginTop="80dp">

                <com.xiaopeng.xui.widget.XFrameLayout
                    style="@style/XLinearLayoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        layout="@layout/item_storage_v5"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.xiaopeng.xui.widget.XLoading
                        android:id="@+id/l_cache_item"
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:layout_gravity="center"
                        android:background="@drawable/x_list_item_selector"
                        app:loading_type="small" />
                </com.xiaopeng.xui.widget.XFrameLayout>
            </com.xiaopeng.xui.widget.XLinearLayout>

        </com.xiaopeng.xui.widget.XConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</com.xiaopeng.xui.widget.XConstraintLayout>
