<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="164dp">

    <RelativeLayout
        android:layout_width="@dimen/floating_item_left_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <com.xiaopeng.xui.widget.XButton
            android:id="@+id/button1"
            style="@style/XButton.Ghost.Small.Positive"
            android:layout_centerInParent="true"
            android:text="@string/sd_push_off" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/floating_item_left_width"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="hello"
                android:layout_marginLeft="4dp"
                android:ellipsize="middle"
                android:textColor="@color/x_theme_text_01"
                android:textSize="@dimen/x_font_title_04_size" />

            <com.xiaopeng.xui.widget.XProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:max="100"
                android:progress="50"
                android:layout_marginRight="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/action1"
                style="@style/XButton.Mix.Small.Video"
                android:layout_marginTop="8dp"
                android:layout_width="115dp"
                android:layout_marginLeft="5dp"
                android:text="视频" />

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/action2"
                style="@style/XButton.Mix.Small.Music"
                android:layout_marginTop="8dp"
                android:layout_width="115dp"
                android:layout_marginStart="10dp"
                android:text="音乐" />

            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/action3"
                style="@style/XButton.Mix.Small.Pic"
                android:layout_marginTop="8dp"
                android:layout_width="115dp"
                android:layout_marginStart="10dp"
                android:text="图片" />
            <com.xiaopeng.xui.widget.XTextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.xiaopeng.xui.widget.XTextView
                android:id="@+id/text2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="868.20MB/1GB"
                android:textSize="@dimen/x_font_body_03_size"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/float_storage_info"/>
        </LinearLayout>
    </LinearLayout>

    <com.xiaopeng.xui.widget.XProgressBar
        android:id="@+id/progressBar2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.xiaopeng.xui.widget.XImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/line" />
</RelativeLayout>
