<?xml version="1.0" encoding="utf-8"?>

<com.xiaopeng.xui.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/XList"
    android:layout_height="@dimen/none_device_tip_height">
    <RelativeLayout
        android:layout_width="@dimen/x_list_left_width"
        android:layout_height="match_parent">
        <com.xiaopeng.xui.widget.XImageView
            android:layout_width="@dimen/x_list_icon_size"
            android:layout_height="@dimen/x_list_icon_size"
            android:layout_centerInParent="true"
            app:vuiMode="DISABLED"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_mid_placeholder" />
    </RelativeLayout>
    <com.xiaopeng.xui.widget.XTextView
        android:id="@+id/x_list_tv"
        style="@style/XListTextSub"
        android:layout_marginStart="@dimen/x_list_left_width"
        android:layout_centerVertical="true"
        android:text="@string/bluetooth_none_device_tip"
        app:vuiMode="DISABLED"/>
</com.xiaopeng.xui.widget.XRelativeLayout>

