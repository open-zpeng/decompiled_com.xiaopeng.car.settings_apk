<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@integer/tile_anim_time"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleX" android:valueTo="0.96"
                android:valueType="floatType"/>
            <objectAnimator android:duration="@integer/tile_anim_time"
                android:interpolator="@android:interpolator/accelerate_decelerate"
                android:propertyName="scaleY" android:valueTo="0.96"
                android:valueType="floatType"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="@integer/tile_anim_time"
                android:propertyName="scaleX" android:valueTo="1.0"
                android:valueType="floatType"/>
            <objectAnimator android:duration="@integer/tile_anim_time"
                android:propertyName="scaleY" android:valueTo="1.0"
                android:valueType="floatType"/>
        </set>
    </item>
</selector>
