<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="XAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="FallbackHome" parent="XAppTheme">
        <item name="android:listDivider">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@color/bg_fallbackhome</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.CleanMode">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="XAppTheme.XPanel.Pop">
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@null</item>
        <item name="android:windowBackground">@drawable/x_bg_dialog</item>
    </style>

    <style name="BluetoothDialog" parent="XDialogView.Large" >
        <item name="dialog_height">@dimen/x_dialog_xlarge_height</item>
    </style>

    <style name="SoundDialog" parent="@style/XAppTheme.XDialog">
        <item name="windowFixedWidthMajor">@dimen/sound_effect_dialog_width</item>
        <item name="windowFixedWidthMinor">@dimen/sound_effect_dialog_width</item>
    </style>

    <style name="InputDialog" parent="@style/XAppTheme.XDialog">
        <item name="windowFixedWidthMajor">1000dp</item>
        <item name="windowFixedWidthMinor">1000dp</item>
    </style>

    <style name="XDialogView.input" >
        <item name="dialog_width">1000dp</item>
        <item name="dialog_content_style">@style/XDialogContentViewStyle.Custom</item>
    </style>

    <!--  XDialog 正文  -->
    <!--  XDialog scrollView  -->

    <!--  XDialog 正文  -->
    <style name="XDialogContentViewStyle.Custom" >
        <!-- 去掉button和正文之间62像素的间距 -->
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--<style name="AppTheme.Translucent.Fullscreen.Float" parent="XAppTheme.Translucent">-->
    <!--<item name="android:windowAnimationStyle">@style/windowAnimationStyle</item>-->
    <!--</style>-->
